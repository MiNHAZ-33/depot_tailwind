<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('products._product.title') %></strong>
    <%= product.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('products._product.description') %></strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('products._product.img_url') %></strong>
    <%= product.image_url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('products._product.price') %></strong>
    <%= product.price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this product", product_path(product, locale: I18n.locale), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this product", edit_product_path(product, locale: I18n.locale), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
