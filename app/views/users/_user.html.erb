<div id="<%= dom_id user %>">
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('.name') %></strong>
    <%= user.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to t('.show'), user_path(user, locale: I18n.locale), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to t('.edit'), edit_user_path(user, locale: I18n.locale), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
